# posted by Cynyr in http://blog.jolexa.net/2010/08/16/linux-my-bash-prompt/
function _chomp_path() {
    local path=${1/${HOME}/\~}
    local last=${path} sedout= count=0 path2=

    #bash is dumb, "${#path//[^'/']/}" fails.
    #sedout="${path//[^'/']/}"
    sedout=`echo $path| sed 's,[^/],,g'`
    count=${#sedout}
    if ((count > 2)); then
#   if [ "x${path:0:1}" != 'x~' ]; then
            last="â€¦"
        path2=${path%/*}
        path2=${path2%/*}
        last+=${path//${path2}}
    fi
    echo ${last}
}

