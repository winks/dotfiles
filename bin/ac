#!/bin/bash
CMDS=("add" "b" "fx" "fxd" "fxs" "nm" "tr" "xm" "zs" )
##########
TOOL=$1;

DF=$(dirname $(readlink -f `which $0`));

if [[ "x${TOOL}" = "x" ]]; then
    for item in "${CMDS[@]}"; do
        echo $item;
    done
    exit
fi
###
if [[ "x${TOOL}" = "xadd" ]]; then
    shift
    ${DF}/my-add $*
    exit
fi
if [[ "x${TOOL}" = "xb" ]]; then
   ${DF}/ac fxd
   ${DF}/ac xm
   ${DF}/ac tr
   ${DF}/ac nm
   ${DF}/ac add
    exit
fi
if [[ "x${TOOL}" = "xfx" ]]; then
    shift
    ${DF}/my-fx $*
    exit
fi
if [[ "x${TOOL}" = "xfxd" ]]; then
    ${DF}/my-fx --single && ${DF}/my-fx --double
    exit
fi
if [[ "x${TOOL}" = "xfxs" ]]; then
    ${DF}/my-fx --single && ${DF}/my-fx --small
    exit
fi
if [[ "x${TOOL}" = "xnm" ]]; then
    ${DF}/run_once_silent nm-applet
    exit
fi
if [[ "x${TOOL}" = "xzs" ]]; then
    source ${DF}/../.zshrc
    exit
fi
if [[ "x${TOOL}" = "xtr" ]]; then
    shift
    ${DF}/trayerx $*
    exit
fi
if [[ "x${TOOL}" = "xxm" ]]; then
    xmodmap ${DF}/../.us-intl-german.xmodmap
    exit
fi

# without a match, just try dotfiles/bin/$TOOL
if [[ -f "${DF}/${TOOL}" ]]; then
    shift
    ${DF}/${TOOL} $*
    exit
fi
