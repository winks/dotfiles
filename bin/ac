#!/bin/bash
CMDS=("b" "fx" "fxd" "k" "keys" "tr")
##########
TOOL="$1";

DF=$(dirname "$(readlink -f "$(which "$0")")");

if [ "${TOOL}" = "" ]; then
    for item in "${CMDS[@]}"; do
        echo $item;
    done
    exit
fi
###################
if [ "${TOOL}" = "b" ]; then
   "${DF}/ac" fxd
   "${DF}/ac" xm
   "${DF}/ac" tr
   "${DF}/ac" keys
fi
###################
if [ "${TOOL}" = "fx" ]; then
    shift
    "${DF}/my-fx" "$@"
    exit
fi
###################
if [ "${TOOL}" = "fxd" ]; then
    "${DF}/my-fx" --single && "${DF}/my-fx" --double
    exit
fi
###################
if [ "${TOOL}" = "k" ]; then
    xmodmap "${DF}/../.us-intl-german.xmodmap"
    exit
fi
###################
if [ "${TOOL}" = "keys" ]; then
   rsa_keys=".ssh/id_rsa"
   ed_keys=".ssh/id_ed25519"
   for k in $rsa_keys; do
     fk="${HOME}/${k}"
     echo $fk
     /usr/bin/ssh-add -l | grep "$fk" || exec /usr/bin/ssh-add "$fk"
   done
   for k in $ed_keys; do
     fk="${HOME}/${k}"
     _comm=$(cat $fk | cut -d' ' -f 3-)
     echo $fk
     /usr/bin/ssh-add -l | grep "${_comm} (ED25519)$" || exec /usr/bin/ssh-add "$fk"
   done

   exit
fi
###################
if [ "${TOOL}" = "tr" ]; then
    shift
    "${DF}/trayerx" "$@"
    exit
fi

# without a match, just try dotfiles/bin/$TOOL
if [ -f "${DF}/${TOOL}" ]; then
    shift
    "${DF}/${TOOL}" "$@"
    exit
fi
