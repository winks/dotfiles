#!/bin/bash
###############
# some config
xrmode=$1;
echo $xrmode;
xrmain="LVDS1"
xrmain_res="1920x1200"
xr2nd="VGA1"

###############
# notebook
xrandr --output $xrmain --mode $xrmain_res

###############
# single-display
if [[ "x${xrmode}" = "x--single" ]]; then
    echo "Switching to single-display mode..."
    xrandr --output $xr2nd --off
    exit $?;
fi

# wtf?
#xrandr --output VGA1 --mode 2048x1152 --right-of LVDS1

###############
# small one
if [[ "x${xrmode}" = "x--small" ]]; then
    echo "Switching to single-display mode..."
    xrandr --output $xr2nd --mode 1680x1050 --left-of $xrmain --rotate normal
    exit $?;
fi
if [[ "x${xrmode}" = "x--small2" ]]; then
    echo "Switching to single-display mode..."
    xrandr --output $xr2nd --mode 1680x1050 --above $xrmain --rotate normal
    exit $?;
fi

###############
# beamer
if [[ "x${xrmode}" = "x--beamer" ]]; then
    xrandr --output $xr2nd --mode 1440x900 --left-of $xrmain --rotate normal
    exit $?;
fi

if [[ "x${xrmode}" = "x--left" ]]; then
    xrandr --output $xr2nd --mode 1920x1080 --left-of $xrmain --rotate normal
    exit $?;
fi

###############
# TNG-HP
if [[ "x${xrmode}" = "x--hp" ]]; then
    xrandr --output $xr2nd --mode 1920x1200 --left-of $xrmain --rotate normal
    exit $?;
fi
###############
# big dell
#xrandr --output $xr2nd --mode 1920x1080 --left-of $xrmain --rotate normal

# digital borked
#xrandr --output DP1 --mode 1920x1080 --right-of LVDS1 --rotate normal

~/bin/trayerx
